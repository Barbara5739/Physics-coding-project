import math
class Moon_physical_orbit(Moving_Object):
    def _init_(self, name, Planet: Moving_Object, mass,
                 orbital_radius, orbital_period, start_angle=0):

        start_x = Planet.x + orbital_radius * math.cos(start_angle)
        start_y = Planet.y + orbital_radius * math.sin(start_angle)

        v_circ = (2 * math.pi * orbital_radius) / orbital_period
        vx = -v_circ * math.sin(start_angle)
        vy = v_circ * math.cos(start_angle)

        super()._init_(name, Planet, mass, start_x, start_y, vx, vy)

        self.planet_ref = Planet
        self.orbital_radius = orbital_radius
        self.orbital_period = orbital_period

    def get_location(self, time_interval):
        r = math.sqrt((self.x - self.planet_ref.x)**2 +
                      (self.y - self.planet_ref.y)**2)

        Fg = Galaxy.G * (self.planet_ref.mass * self.mass) / r**2

        ax = -Fg * (self.x - self.planet_ref.x) / r / self.mass
        self.vx += ax * time_interval
        self.x += self.vx * time_interval
        self.x_positions.append(self.x)

        ay = -Fg * (self.y - self.planet_ref.y) / r / self.mass
        self.vy += ay * time_interval
        self.y += self.vy * time_interval
        self.y_positions.append(self.y)

        return self.x_positions, self.y_positions
