
import matplotlib.pyplot as plt


Ms = 2.0e30                    # mass of sun in kg unit
Me = 5.972e24                  # mass of earth in kg unit        
G = 6.67e-11
gravconst = G*Ms*Me
day= 24*3600
print(gravconst)
class Sun:
    def __init__(self, name, mass, x, y):
        self.name = name
        self.mass = mass
        self.x = x
        self.y = y

class Planet:
    def __init__(self, name, mass,xp, yp, vxp, vyp):
        self.name = name
        self.x = xp
        self.y = yp
        self.vx = vxp
        self.vy = vyp

class Alien:
    def __init__(self, name, mass, xa, ya, vxa, vya):
        self.x = xa
        self.y = ya
        self.vx = vxa
        self.vy = vya
        self.name = name
    
class Moon:
    def __init__(self, mass, x, y, vx, vy):
        self.mass = mass
        self.x = x
        self.y = y
        self.vx = vx
        self.vy = vy
